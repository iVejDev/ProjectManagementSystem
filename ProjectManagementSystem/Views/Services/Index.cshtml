@model IEnumerable<ProjectManagementSystem.ViewModels.ServiceViewModel>

@{
    ViewData["Title"] = "Services";
}

<div class="container mt-4">
    <h2>Services</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Service</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.HourlyRate)</th>
                <th>Active Projects</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.HourlyRate.ToString("C")</td>
                        <td>@item.ProjectCount</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>