@model ProjectManagementSystem.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container mt-4">
    <h2>Delete Project</h2>
    <div class="alert alert-danger mt-3">
        <h4>Are you sure you want to delete this project?</h4>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Project Number</dt>
                <dd class="col-sm-9">@Model.ProjectNumber</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Customer</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3">Project Manager</dt>
                <dd class="col-sm-9">@Model.ProjectManagerName</dd>

                <dt class="col-sm-3">Service</dt>
                <dd class="col-sm-9">@Model.ServiceName</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

                <dt class="col-sm-3">Total Price</dt>
                <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>